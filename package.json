{
  "name": "civicfix",
  "version": "1.0.0",
  "description": "CivicFix - Community Issue Reporting Platform",
  "private": true,
  "scripts": {
    "install:all": "npm install --prefix server && npm install --prefix client",
    "dev:server": "npm run dev --prefix server",
    "dev:client": "npm run dev --prefix client",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build:server": "npm run build --prefix server",
    "build:client": "npm run build --prefix client",
    "build:client:gh": "npm run build:gh --prefix client",
    "deploy:gh": "npm run build:client:gh && node scripts/copy-404.js && node scripts/remove-gh-videos.js && npx gh-pages -d client/dist",
    "build": "npm run build:server && npm run build:client",
    "migrate": "npm run migrate --prefix server",
    "start:server": "npm start --prefix server",
    "start:client": "npm run preview --prefix client"
  },
  "keywords": [
    "civic",
    "issues",
    "reporting",
    "community"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "gh-pages": "^6.3.0"
  }
}
